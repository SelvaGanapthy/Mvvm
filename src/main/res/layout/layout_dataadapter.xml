<?xml version="1.0" encoding="utf-8"?><layout xmlns:android="http://schemas.android.com/apk/res/android"    xmlns:app="http://schemas.android.com/apk/res-auto"    xmlns:tools="http://schemas.android.com/tools">    <data>        <import type="android.view.View" />        <variable            name="datamodel"            type="com.example.testretrofit.DataModel" />    </data>    <androidx.constraintlayout.widget.ConstraintLayout        android:layout_width="match_parent"        android:layout_height="match_parent"        tools:context="com.example.testretrofit.MainActivity"        tools:showIn="@layout/activity_main">        <EditText            android:id="@+id/edt1"            android:layout_width="match_parent"            android:layout_height="wrap_content"            android:layout_marginTop="10dp"            android:text="@={datamodel.email}"            app:layout_constraintTop_toTopOf="parent" />        <EditText            android:id="@+id/edt2"            android:layout_width="match_parent"            android:layout_height="wrap_content"            android:layout_marginTop="50dp"            android:text="@={datamodel.name}"            app:layout_constraintTop_toTopOf="@id/edt1" />    </androidx.constraintlayout.widget.ConstraintLayout></layout>